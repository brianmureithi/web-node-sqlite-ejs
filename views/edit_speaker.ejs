<%- include("header") -%>

<div class="form-container">
    <form action="/speakers/edit/<%= model.id %>" method="post">
    <div class="row">
      <div class="col-25">
        <label for="name">Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="name" name="name" value="<%= model.name %>">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="title">Title</label>
      </div>
      <div class="col-75">
        <input type="text" id="title" name="title" value="<%= model.title %>">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="workplace">Work Place</label>
      </div>
      <div class="col-75">
        <input type="text" id="workplace" name="workplace" value="<%= model.workplace %>">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="about">About</label>
      </div>
      <div class="col-75">
        <textarea id="about" name="about" style="height:200px;"><%= model.about %> </textarea>
      </div>
    </div>
    <br>
    <div class="row">
      <input type="submit" value="Submit">
    </div>
    </form>
  </div>

<%- include("footer") -%>