<%- include("header") -%>

<div class="form-container">
   
    <form action="/create" method="post">
        <h1>Add new Speaker</h1>
    <div class="row">
      <div class="col-25">
        <label for="name">Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="name" name="name" placeholder="Enter name...">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="title">Title</label>
      </div>
      <div class="col-75">
        <input type="text" id="title" name="title" placeholder="Enter speaker's title...">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="workplace">Work Place</label>
      </div>
      <div class="col-75">
        <input type="text" id="workplace" name="workplace" placeholder="Add work place...">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="about">About</label>
      </div>
      <div class="col-75">
        <textarea id="about" name="about" placeholder="Enter details about the speaker" style="height:200px;"> </textarea>
      </div>
    </div>
    <br>
    <div class="row">
      <input type="submit" value="Submit">
    </div>
    </form>
  </div>

<%- include("footer") -%>